<!------ Include the above in your HEAD tag ---------->
@section menuCSS {
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="/css/kullanicigirisvekayitol.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-form-link">Giriş</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="register-form-link">Kayıt </a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <!--*******************Login******************************************-->
                            <form id="login-form" action="~/Kullanicilar/KullaniciGirisIndex" method="post" role="form" style="display: block;">
                                <div class="form-group">
                                    <input type="text" name="KullaniciEmail" id="kullaniciEmail" tabindex="1" class="form-control" placeholder="Kullanıcı Adı" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="KullaniciSifre" id="sifre" tabindex="2" class="form-control" value="" placeholder="Şifre">
                                </div>
                                <div class="form-group text-center">
                                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                    <label for="remember">Beni Hatırla</label>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="GİRİŞ">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <a href="https://phpoll.com/recover" tabindex="5" class="forgot-password">Şifreni mi Unuttun?</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!--*******************Register******************************************-->

                            <form id="register-form" action="~/Kullanicilar/KullaniciKayıtOlIndex" method="post" role="form" style="display: none;">
                                <div class="form-group">
                                    <input type="text" name="Adi" id="adi" tabindex="1" class="form-control" placeholder="Adınız" value="">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Soyadi" id="soyadi" tabindex="1" class="form-control" placeholder="Soyadınız" value="">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="KullaniciEmail" id="email" tabindex="1" class="form-control" placeholder="Email" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="KullaniciSifre" id="sifre" tabindex="2" class="form-control" placeholder="Şifre">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Şimdi Üye Ol">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        @Html.Raw(ViewBag.mesaj)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section MenuJs {
    <script>

        $(function () {

            $('#login-form-link').click(function (e) {
                $("#login-form").delay(100).fadeIn(100);
                $("#register-form").fadeOut(100);
                $('#register-form-link').removeClass('active');
                $(this).addClass('active');
                e.preventDefault();
            });
            $('#register-form-link').click(function (e) {
                $("#register-form").delay(100).fadeIn(100);
                $("#login-form").fadeOut(100);
                $('#login-form-link').removeClass('active');
                $(this).addClass('active');
                e.preventDefault();
            });

        });

    </script>

    <script>
        $(document).ready(function () {
            // Giriş Formu Doğrulama
            $('#login-form').validate({
                rules: {
                    kullaniciEmail: {
                        required: true
                    },
                    sifre: {
                        required: true
                    }
                },
                messages: {
                    kullaniciEmail: {
                        required: "Kullanıcı adı gereklidir."
                    },
                    sifre: {
                        required: "Şifre gereklidir."
                    }
                },
                // ... Diğer jQuery Validate ayarları
            });

            // Kayıt Formu Doğrulama
            $('#register-form').validate({
                rules: {
                    Adi: {
                        required: true
                    },
                    Soyadi: {
                        required: true
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                    sifre: {
                        required: true,
                        minlength: 5
                    }
                },
                messages: {
                    Adi: {
                        required: "Ad gereklidir."
                    },
                    Soyadi: {
                        required: "Soyad gereklidir."
                    },
                    Email: {
                        required: "Email adresi gereklidir.",
                        email: "Lütfen geçerli bir email adresi giriniz."
                    },
                    sifre: {
                        required: "Şifre gereklidir.",
                        minlength: "Şifreniz en az 5 karakter uzunluğunda olmalıdır."
                    }
                },
                // ... Diğer jQuery Validate ayarları
            });
        });
    </script>

}


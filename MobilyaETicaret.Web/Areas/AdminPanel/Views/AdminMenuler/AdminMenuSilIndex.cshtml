@model Menuler

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminMenuler/AdminMenulerIndex">Menü Listesi</a></li>
                    <li class="breadcrumb-item active">Menü Sil</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">MENÜ SİL</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="AdminMenuSilIndex" id="menuGuncelleIndex" asp-controller="AdminMenuler" method="post">

                        <div class="card-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.AktifMi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.AktifMi)
                                        @Html.ValidationMessageFor(model => model.AktifMi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <input type="submit" class="btn btn-success" value="Menü Sil" />
                        </div>
                        @if (ViewBag.mesaj != null)
                        {
                            <div class="col-md-12 alert alert-danger">
                                @ViewBag.mesaj
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary {

    <script>
        $(document).ready(function () {
            $('#menuKaydetIndex').validate({
                rules: {
                    MenuAdi: {
                        required: true
                    },
                    MenuSirasi: {
                        required: true,
                        number: true
                    },
                    ErisimAlanlariId: {
                        required: false,
                        number: true
                    }
                },
                messages: {
                    MenuAdi: {
                        required: "Menü adı gereklidir."
                    },
                    MenuSirasi: {
                        required: "Menü sırası gereklidir.",
                        number: "Lütfen geçerli bir sayı giriniz."
                    },
                    ErisimAlanlariId: {
                        number: "Bu Erişim alanı zaten var"
                    },
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });
    </script>
}
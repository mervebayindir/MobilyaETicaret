@model FotograflarVeUrunlerDTO

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminFotograflar/AdminFotograflarIndex">Fotograf Listesi</a></li>
                    <li class="breadcrumb-item active">Fotograf Güncelle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">FOTOGRAF GÜNCELLE</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="AdminFotografGuncelleIndex" id="fotografGuncelleIndex" asp-controller="AdminFotograflar" method="post">
                            <input type="hidden" value="@Model.UrunId" name="UrunId" asp-for="UrunId" />

                            <div class="form-group">
                                @Html.LabelFor(model => model.AktifMi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.AktifMi)
                                        @Html.ValidationMessageFor(model => model.AktifMi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <input type="submit" class="btn btn-success" value="Fotograf Güncelle" />
                            </div>
                        </form>
                        @Html.Raw(TempData["mesaj"])
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary {

}

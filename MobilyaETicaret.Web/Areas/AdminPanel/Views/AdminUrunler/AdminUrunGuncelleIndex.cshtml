@model Tuple<List<Kategoriler>,UrunlerveKategoriDTO>

@section addTopLibrary {

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminUrunler/AdminUrunlerIndex">Ürün Listesi</a></li>
                    <li class="breadcrumb-item active">Ürün Güncelle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Ürün Ekleme alanı -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">ÜRÜN GÜNCELLE</h3>
                    </div>
                    <form asp-action="AdminUrunGuncelleIndex" id="urunGuncelleIndex" asp-controller="AdminUrunler" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="UrunAdi">Ürün Adı</label>
                                <input name="UrunAdi" asp-for="UrunAdi" type="text" value="@Model.Item2.UrunAdi" class="form-control" placeholder="Ürün Adı">
                                <span asp-validation-for="UrunAdi" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="KategoriId">Kategori Adi Seçiniz</label>
                                <select name="KategoriId" asp-for="KategoriId" class="form-control">
                                    <option selected value="@Model.Item2.Kategoriler.Id">@Model.Item2.Kategoriler.KategoriAdi</option>
                                    @foreach (var item in Model.Item1)
                                    {
                                        <option value="@item.Id">@item.KategoriAdi</option>
                                    }

                                </select>
                                <span asp-validation-for="KategoriId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UrunStok">Ürün Stok</label>
                                <input name="UrunStok" asp-for="UrunStok" value="@Model.Item2.UrunStok" type="text" class="form-control" placeholder="Ürün Stok">
                                <span asp-validation-for="UrunStok" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UrunFiyat">Ürün Fiyat</label>
                                <input name="UrunFiyat" asp-for="UrunFiyat" value="@Model.Item2.UrunFiyat" type="text" class="form-control" placeholder="Ürün Fiyat">
                                <span asp-validation-for="UrunFiyat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Aciklama">Ürün Açıklama</label>
                                <input name="Aciklama" asp-for="Aciklama" type="text" value="@Model.Item2.Aciklama" class="form-control" placeholder="Ürün Açıklaması">
                                <span asp-validation-for="Aciklama" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Item2.AktifMi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.Item2.AktifMi)
                                        @Html.ValidationMessageFor(model => model.Item2.AktifMi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body row">
                            <div class="d-flex justify-content-center float-left">
                                <input type="submit" class="btn btn-success" value="Ürün Kaydet" />
                            </div>
                        </div>

                    </form>
                </div>
                @Html.Raw(TempData["mesaj"])
            </div>
        </div>
    </div>

</section>

@section addBottomLibrary {
    <script>
        $(function () {
            $('#urunGuncelleIndex').validate({
                rules: {
                    UrunAdi: {
                        required: true
                    },
                    KategoriId: {
                        required: true,
                        number: true
                    },
                    UrunStok: {
                        required: true,
                        number: true
                    },
                    UrunFiyat: {
                        required: true,
                        number: true
                    },
                    Aciklama: {
                        required: false
                    }
                },
                messages: {
                    UrunAdi: {
                        required: "Ürün adı alanı zorunludur."
                    },
                    KategoriId: {
                        required: "Kategori seçimi zorunludur.",
                        number: "Geçerli bir kategori ID'si giriniz."
                    },
                    UrunStok: {
                        required: "Ürün stok alanı zorunludur.",
                        number: "Lütfen geçerli bir stok miktarı giriniz."
                    },
                    UrunFiyat: {
                        required: "Ürün fiyat alanı zorunludur.",
                        number: "Lütfen geçerli bir fiyat giriniz."
                    },
                    Aciklama: {
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });
    </script>
}

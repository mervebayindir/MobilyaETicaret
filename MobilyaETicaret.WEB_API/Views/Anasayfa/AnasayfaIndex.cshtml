<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
	<div class="container">
		<div class="p-b-10">
			<h3 class="ltext-103 cl5">
				Ürünler
			</h3>
		</div>

		<div class="flex-w flex-sb-m p-b-52">
			<div class="flex-w flex-l-m filter-tope-group m-tb-10">
				<partial name="_Kategoriler" model="Model.Kategoriler" />
			</div>
		</div>

		<div class="row isotope-grid">

			@foreach (var urun in Model.Urunler)
			{
				var urunFotograf = Model.Fotograflar.FirstOrDefault(f => f.UrunId == urun.Id)?.FotografYolu;

				<input type="hidden" class="urun-id" value="@urun.Id" />

				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item @urun.KategoriId.ToString()">
					<div class="block2">
						<div class="block2-pic hov-img0">
							@if (urunFotograf != null)
							{
								<img src="~/resimler/@urunFotograf" style="width:325px; height:325px;" alt="IMG-PRODUCT">
							}
							else
							{
								<img src="~/resimler/resim.png" style="width:325px; height:325px;" alt="IMG-PRODUCT">
							}

							<a href="/Urunler/UrunDetayIndex/@urun.Id" data-urun-id="@urun.Id" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15">
								Ürün Detay
							</a>

						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<a href="/Urunler/UrunDetayIndex/@urun.Id" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									@urun.UrunAdi
								</a>

								<span class="stext-105 cl3">
									@urun.UrunFiyat
								</span>
							</div>

							<div class="block2-txt-child2 flex-r p-t-3">
								<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
									<img class="icon-heart1 dis-block trans-04" src="~/template/cozastore/images/icons/icon-heart-01.png" alt="ICON">
									<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/template/cozastore/images/icons/icon-heart-02.png" alt="ICON">
								</a>
							</div>
							<a href="/Sepet/SepeteEkle/@urun.Id">Sepete Ekle</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>

